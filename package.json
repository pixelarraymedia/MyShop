{
  "name": "myshop",
  "version": "1.0.0",
  "description": "Mern stack Shop",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "node backend/server",
    "server": "nodemon backend/server",
    "client": "npm start --prefix frontend",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "data:import": "node backend/seeder",
    "data:destroy": "node backend/seeder -d",
    "build": "NPM_CONFIG_PRODUCTION=false cd backend && npm install && cd ../frontend && npm install && npm run build",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install --prefix frontend && npm run build --prefix frontend"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pixelarraymedia/MyShop.git"
  },
  "author": "Darion",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/pixelarraymedia/MyShop/issues"
  },
  "homepage": "https://github.com/pixelarraymedia/MyShop#readme",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "colors": "^1.4.0",
    "dotenv": "^16.0.0",
    "express": "^4.17.3",
    "express-async-handler": "^1.2.0",
    "express-rate-limit": "^6.7.0",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^6.2.8",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1"
  },
  "devDependencies": {
    "concurrently": "^7.0.0",
    "nodemon": "2.0.15"
  }
}
